doctype html
html(lang="en")
  head
    title Flash Cards
    link(rel="stylesheet", href="/static/stylesheets/style.css")
  body
    include includes/header.pug
    if name
      section.namecard
        .namecard-hello
          p.namecard-greeting Welcome, #{name}!
          form.namecard-exit(action='/', method='POST')
            button(type='submit')
              img(src='/static/img/close.svg')
    block content